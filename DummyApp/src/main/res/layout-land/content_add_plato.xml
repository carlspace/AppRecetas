<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="73dp"
    tools:layout_editor_absoluteX="0dp">


    <EditText
        android:id="@+id/nombrePlatoIntroducido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Nombre del plato"
        android:maxLines="2"
        android:scrollbars="vertical"
        android:textColorLink="@android:color/background_dark"
        android:layout_marginStart="45dp"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="45dp" />

    <EditText
        android:id="@+id/recetaPlatoIntroducida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Descripcion de la receta"
        android:maxLines="2"
        android:scrollbars="vertical"
        android:textColorLink="@android:color/background_dark"
        android:layout_marginEnd="34dp"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="343dp" />

    <EditText
        android:id="@+id/ingredientesIntroducidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Ingredientes"
        android:maxLines="2"
        android:scrollbars="vertical"
        android:textColorLink="@android:color/background_dark"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="99dp" />

    <EditText
        android:id="@+id/enlaceYoutubeIntroducido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Enlace a Youtube"
        android:maxLines="2"
        android:scrollbars="vertical"
        android:textColorLink="@android:color/background_dark"
        android:layout_marginStart="45dp"
        tools:layout_editor_absoluteY="180dp"
        tools:layout_editor_absoluteX="45dp" />

    <Button
        android:id="@+id/addImagenPlato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccionar imagen"
        android:layout_marginEnd="49dp"
        tools:layout_editor_absoluteY="94dp"
        tools:layout_editor_absoluteX="371dp" />

    <ImageView
        android:id="@+id/imagenSeleccionadaPlato"
        android:layout_width="90dp"
        android:layout_height="62dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteY="180dp"
        tools:layout_editor_absoluteX="412dp" />

    <Button
        android:id="@+id/btnDonePlato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terminar"
        tools:layout_editor_absoluteY="247dp"
        tools:layout_editor_absoluteX="250dp" />
</android.support.constraint.ConstraintLayout>