<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/btnCarne"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintRight_toLeftOf="@+id/space"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnPescado"
        android:layout_marginEnd="6dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnPescado">

        <ImageView
            android:id="@+id/iconoBtnCarne"
            android:layout_width="wrap_content"
            android:layout_height="123dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/icono_inicial_carne" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnPescado"
        android:layout_width="0dp"
        android:layout_height="223dp"
        android:orientation="horizontal"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/btnSopa"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/btnSopa"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/btnSopa">

        <ImageView
            android:id="@+id/iconoBtnPescado"
            android:layout_width="wrap_content"
            android:layout_height="129dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/icono_inicial_pescado" />
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/space" />

    <LinearLayout
        android:id="@+id/btnSopa"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/space"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/space">

        <ImageView
            android:id="@+id/iconoBtnSopa"
            android:layout_width="wrap_content"
            android:layout_height="158dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/icono_inicial_sopa" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnEnsalada"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="1"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/space"
        app:layout_constraintRight_toRightOf="@+id/btnCarne"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/btnCarne"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iconoBtnEnsalada"
            android:layout_width="match_parent"
            android:layout_height="146dp"
            app:srcCompat="@mipmap/icono_inicial_ensalada" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>